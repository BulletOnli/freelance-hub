generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  ADMIN
  CLIENT
  FREELANCER
}

model User {
  id             String       @id
  firstName      String
  lastName       String
  email          String?      @unique
  password       String?
  profilePicture String? // Upload thing link
  googleId       String?
  role           UserRole
  sessions       Session[]
  userDetails    UserDetails?
  wallet         Wallet?

  createdAt DateTime @default(now())

  @@map("users")
}

model UserDetails {
  id             String   @id @default(uuid())
  userId         String   @unique
  bio            String
  specialization String[]
  portfolio      String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user-details")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("sessions")
}

model Wallet {
  id                 String              @id @default(uuid())
  userId             String              @unique
  balance            Float               @default(5000)
  walletTransactions WalletTransaction[]

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("wallets")
}

model WalletTransaction {
  id       String                    @id @default(uuid())
  walletId String
  type     WALLET_TRANSACTION_TYPE
  amount   Float
  status   WALLET_TRANSACTION_STATUS @default(PENDING)

  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@map("wallet-transactions")
}

enum WALLET_TRANSACTION_TYPE {
  CASH_OUT
  CASH_IN
  PAY_BILLS
}

enum WALLET_TRANSACTION_STATUS {
  PENDING
  SUCCESS
  FAILED
}
